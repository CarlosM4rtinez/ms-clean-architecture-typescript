{
  "name": "ms-clean-architecture-typescript",
  "version": "1.0.0",
  "description": "Microservice built with typescript and implemented with clean architecture.",
  "main": "dist/main.js",
  "scripts": {
    "start": "node application/dist/app.module.js",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --watch --debug",
    "build": "nest build",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "author": "Carlos Martinez https://github.com/carlosm4rtinez",
  "license": "MIT",
  "dependencies": {
    "@nestjs/common": "^10.3.1",
    "@nestjs/core": "^10.3.1",
    "reflect-metadata": "^0.2.1",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.3.0",
    "@nestjs/schematics": "^10.1.0",
    "@nestjs/testing": "^10.3.1",
    "@types/jest": "^29.5.11",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "engines": {
    "node": ">=12.0.0"
  }
}
